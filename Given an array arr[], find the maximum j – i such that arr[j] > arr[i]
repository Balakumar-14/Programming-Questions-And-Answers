#include <stdio.h>
void maxIndexDiff(int a[],int n)
{
	int i,j,maxcount=0;
	for(i=0;i<n;i++)
	{
		int count=0;
		for(j=i+1;j<n;j++)
		{
			if(a[j]>a[i])
			{
				count=j-i;
			}
		}
		maxcount=(maxcount>count)?maxcount:count;
	}
	printf("%d",maxcount);
}
int main()
{
    int arr[] = { 9, 2, 3, 4, 5, 6, 7, 8, 18, 0 };
    int n = sizeof(arr) / sizeof(arr[0]);
    maxIndexDiff(arr, n);
    getchar();
    return 0;
}
